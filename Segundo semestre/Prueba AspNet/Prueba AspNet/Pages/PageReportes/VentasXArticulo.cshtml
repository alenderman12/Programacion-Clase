@page
@model Prueba_AspNet.Pages.PageReportes.VentasXArticuloModel
@{
}
<div class="text-left">
    <h1 class="display-4 text-center">Ventas por Articulo</h1>
    <div class="row">
        <div class="col-sm-12 text-right">
        </div>
        <form method="post">
            <div class="row">
                <div class="col-sm-4 text-right">
                    <div class="form-group">
                        <select id="idArticulo" name="idArticulo" class="form-control">
                            <option value="">Seleccione un articulo</option>
                            @foreach (var cli in Model.articulos)
                            {
                                <option value="@cli.Id">@cli.Nombre</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="col-sm-4 text-left">
                    <button type="submit" class="btn btn-info"
                            asp-page-handler="Buscar">
                        <i class="fa fa-search"></i> Buscar
                    </button>
                </div>
            </div>
        </form>
        <table class="table text-center">
            <thead>
                <tr>
                    <td>ID</td>
                    <td>Fecha</td>
                    <td>Cliente</td>
                    <td>Articulo</td>
                    <td>Importe</td>
                </tr>
            </thead>
            <tbody>
                @if (Model.VentasXArt != null && Model.VentasXArt.Any())
                {
                    @foreach (var unVen in Model.VentasXArt)
                    {
                        <tr>
                            <td>@unVen.Id</td>
                            <td>@unVen.Fecha.ToShortDateString()</td>
                            <td>@unVen.Cliente.Nombre</td>
                            <td>@unVen.Articulo.Nombre</td>
                            <td>$@unVen.Importe</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center">No hay ventas para el articulo seleccionado</td>
                    </tr>
                }
            </tbody>
            @if (Model.VentasXArt != null && Model.VentasXArt.Any())
            {
                <tfoot>
                    <tr>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td><strong>TOTAL:</strong></td>
                        <td><strong>@Model.Total</strong></td>
                    </tr>
                </tfoot>
            }
        </table>
        @if (!string.IsNullOrEmpty(Model.Mensaje))
        {
            <div class="alert alert-warning" role="alert">
                @Model.Mensaje
            </div>
        }
    </div>
</div>