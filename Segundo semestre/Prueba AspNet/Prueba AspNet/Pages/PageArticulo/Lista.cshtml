@page
@model Prueba_AspNet.Pages.PageArticulo.ListaModel
@{
    ViewData["Title"] = "Lista de Articulos";
}
<div class="text-left">
    <h1 class="display-4 text-center">Lista de Articulos</h1>
    <div class="row">
        <div class="col-sm-12 text-right">
            <a class="btn btn-primary" asp-page="./Alta">Agregar</a>
        </div>
        <table class="table text-center">
            <thead>
                <tr>
                    <td>ID</td>
                    <td>Nombre</td>
                    <td>Rubro</td>
                    <td>Precio</td>
                    <td>Stock</td>
                    <td>Acciones</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var unArt in Model.articulos)
                {
                        <tr>
                            <td>@unArt.Id</td>
                            <td>@unArt.Nombre</td>
                            <td>@unArt.Rubro</td>
                            <td>@unArt.Precio</td>
                            <td>@unArt.Stock</td>
                            <td>
                                <div class="row">
                                    <div class="col-sm-4">
                                        <a class="btn btn-primary" asp-page="./Modificar" asp-route-id="@unArt.Id">Modificar</a>
                                    </div>
                                    <div class="col-sm-4">
                                        <form method="post" asp-page-handler="Eliminar">
                                            <input type="hidden" name="id" value="@unArt.Id"/>
                                            <button type="submit" class="btn btn-danger">Eliminar</button>
                                        </form>
                                    </div>
                                    <div class="col-sm-4">
                                            <a class="btn btn-info" asp-page="./Detalle" asp-route-id="@unArt.Id">Detalles</a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                }
            </tbody>
        </table>
    </div>
</div>