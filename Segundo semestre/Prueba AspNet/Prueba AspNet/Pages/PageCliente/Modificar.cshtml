@page
@model Prueba_AspNet.Pages.PageCliente.ModificarModel
@{
}
<div class="text-left">
    <h1 class="display-4">Modificar</h1>
    <form method="post">
        <div class="form-group">
            <label for="id">ID:</label>
            <input type="text" id="id" name="Id" class="form-control" readonly value="@Model.cliente.Id" />
        </div>
        <div class="form-group">
            <label for="nombre">Nombre:</label>
            <input type="text" id="nombre" name="nombre" class="form-control" value="@Model.cliente.Nombre" />
        </div>
        <div class="form-group">
            <label for="direccion">Direccion:</label>
            <input type="text" id="direccion" name="direccion" class="form-control" value="@Model.cliente.Direccion" />
        </div>
        <div class="form-group">
            <label for="telefono">Telefono:</label>
            <input type="text" id="telefono" name="telefono" class="form-control" value="@Model.cliente.Telefono" />
        </div>
        <br />
        <button type="submit" class="btn btn-primary"
                asp-page-handler="Modificar">
            Modificar
        </button>
    </form>
</div>